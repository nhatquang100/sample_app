<%provide :title, t("home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "views.static_pages.home.h3" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t"title" %></h1>

  <h2>
    <%= t "views.static_pages.home.h2" %>
    <a href="http://www.railstutorial.org/"><%= t "views.static_pages.home.a1" %></a>
    <%= t "views.static_pages.home.a11" %>
  </h2>

  <%= link_to t("button"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("download.png", alt: "Rails logo"),
  "http://rubyonrails.org/" %>
<% end %>
